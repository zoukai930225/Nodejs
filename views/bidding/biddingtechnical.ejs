<body style="padding-top: 8px">
    <div class="content">
        <div class="container-body">
            <h3>技术协议</h3><br>
            <table border="1" cellspacing="0" cellpadding="0" style="width:100% ;margin-left: 0;text-align: center;line-height:4rem;">
                <tr>
                    <td style="width:25%;">型号</td>
                    <td style="width:75%;">
                        <span>
                            <%= data.technology.GoodsSeriesCode %>
                        </span>
                    </td>
                </tr>
                <% tem.Template.forEach(function(item){%>
                    <tr>
                        <td style="width:25%;">
                            <%= item.TechnicalParameters %>
                        </td>
                        <% if(item.CheckStyle==1) { %>
                            <td style="width:75%;">
                                <% item.Parameters.forEach(function(items){%>
                                    <% if(items.ParameterKey==item.value) { %>
                                        <input type="checkbox" name='<%= item.TechnicalParameters %>' checked id='<%= item.CheckStyle %>' style="margin:0 0.15rem;"
                                            onchange="checkboxChange(this)" value=<%=items.ParameterKey%>>
                                        <% } else  { %>
                                            <input type="checkbox" name='<%= item.TechnicalParameters %>' id='<%= item.CheckStyle %>' style="margin:0 0.15rem;" onchange="checkboxChange(this)"
                                                value=<%=items.ParameterKey%>>
                                            <% } %>
                                                <%= items.ParameterKey %>
                                                    <% }) %>
                            </td>
                            <% } else  { %>
                                <td style="width:75%;">
                                    <input id='<%= item.CheckStyle %>' type="text" name='<%= item.TechnicalParameters %>' onchange="inputtext(this)" style="text-align: center;width:75%;height:30px;border:none;border-bottom:1px solid #151515"
                                        value=<%=item.value%>>
                                </td>
                                <% } %>

                    </tr>
                    <% }) %>

            </table>
        </div>
    </div>
</body>

